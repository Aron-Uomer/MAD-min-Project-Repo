<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/padding_large"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExploreActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/exploreTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What this system does"
            android:textSize="@dimen/text_xlarge"
            android:textStyle="bold"
            android:paddingBottom="@dimen/padding_medium"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/card_radius"
            app:cardElevation="@dimen/card_elevation"
            android:layout_marginBottom="@dimen/margin_large">

            <LinearLayout
                android:orientation="vertical"
                android:padding="@dimen/padding_large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:text="• Student registration and secure login (student id + password)"
                    android:textSize="@dimen/text_medium"
                    android:paddingBottom="@dimen/padding_small"/>

                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:text="• View class schedule by department, year and day"
                    android:textSize="@dimen/text_medium"
                    android:paddingBottom="@dimen/padding_small"/>

                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:text="• Advisors can add grades and additional schedules (with room conflict checks)"
                    android:textSize="@dimen/text_medium"
                    android:paddingBottom="@dimen/padding_small"/>

                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:text="• Students can view results and message advisors"
                    android:textSize="@dimen/text_medium"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
