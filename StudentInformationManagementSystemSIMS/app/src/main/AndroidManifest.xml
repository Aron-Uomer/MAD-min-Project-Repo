<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.unityuniversity.sims">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SIMS">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".LoginActivity" android:exported="false" />
        <activity android:name=".RegistrationActivity" android:exported="false" />
        <activity android:name=".StudentDashboardActivity" android:exported="false" />
        <activity android:name=".ScheduleActivity" android:exported="false" />
        <activity android:name=".ResultsActivity" android:exported="false" />
        <activity android:name=".MessageActivity" android:exported="false" />
        <activity android:name=".AdvisorActivity" android:exported="false" />
        <activity android:name=".ProvideGradeActivity" android:exported="false" />
        <activity android:name=".ProvideScheduleActivity" android:exported="false" />
        <activity android:name=".AdvisorMessagesActivity" android:exported="false" />
        <activity android:name=".ExploreActivity" android:exported="false" />
        <activity android:name=".CoursesActivity" android:exported="false" />

    </application>

</manifest>
